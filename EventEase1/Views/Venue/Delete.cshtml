@model EventEase1.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h2>Are you sure you want to delete this venue?</h2>

<div>
    <strong>Name:</strong> @Model.VenueName <br />
    <strong>Location:</strong> @Model.Location
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="VenueId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

