@model EventEase1.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h2 class="text-center mb-4">Delete Event</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this event?
</div>

<div class="card p-4 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Event Name</dt>
        <dd class="col-sm-9">@Model.EventName</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.EventDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Venue</dt>
        <dd class="col-sm-9">@Model.Venue?.VenueName ?? "Not Assigned"</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-4">
    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
